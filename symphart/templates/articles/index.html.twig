{% extends 'base.html.twig' %}
{% block title %} SympArt Article {% endblock %}

{% block body %}

    {% if articles %}
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
            {% for article in articles %}
                <tr>
                    <td>{{ article.title }}</td>
                    <td><a href="/article/{{ article.id }}" class="btn btn-dark">Open</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>No articles</p>
    {% endif %}
    
{% endblock %}